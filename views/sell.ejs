<%- include ('partials/header'); -%>
<%- include ('partials/nav'); -%>

<!-- ======================================Sell=================================================== -->
<div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title mx-auto text-success h2" id="exampleModalLongTitle">SELL YOUR
                    PRODUCT</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/home" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputState">Commodity</label>
                            <select id="inputState" class="form-control" required>
                                <option selected>Choose...</option>
                                <option>Wheat</option>
                                <option>Rice</option>
                                <option>Pulse</option>
                                <option>Sugercane</option>
                                <option>Dry Fruit</option>
                                <option>Vegetable</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Variety</label>
                            <input type="text" class="form-control" id="inputPassword4" placeholder="Variety" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Quantity</label>
                            <input type="number" class="form-control" id="inputEmail4"
                                placeholder="Quantity in Quintals" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Expected Price</label>
                            <input type="number" class="form-control" id="inputPassword4"
                                placeholder="Price per Quintal" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Upload Photo</label>
                        <input type="file" class="form-control" id="inputAddress2" required>
                    </div>
            </div>
            <div class="modal-footer mx-auto">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
                <button type="submit" class="btn btn-success">POST NOW</button>
            </div>
            </form>
        </div>
    </div>
</div>


<%- include ('partials/footer'); -%>
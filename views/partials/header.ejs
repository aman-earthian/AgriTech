        <body>
            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
                <div class="container">
                    <a class="navbar-brand font-weight-bold">AGRITECH</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>                  
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <form class="w-75 ml-5">
                          <div class="input-group">
                            <input class="form-control" type="search" placeholder="Find Pulses, Grains, Rice and more..." aria-label="Search">
                            <span class="input-group-addon bg-success text-white"><i class="fa fa-search p-2 fa-2x"></i></span>
                          </div>
                        </form>
                        <ul class="navbar-nav ml-5">

                        <% if(!currentuser){ %>
                        <li class="nav-item active">
                            <a class="nav-link text-danger" href="/login">LOGIN</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link text-danger" href="/register">SIGN UP</a>
                        </li>
                        <% } else{ %>
                        <li class="nav-item active">
                            <a class="nav-link text-danger" href="#">Welcome, <%= currentuser.username %></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link text-danger" href="/logout">LOGOUT</a>
                        </li>
                        <% } %>
                         
                                  
                          <!--   ==========================================================================================  -->
                          <li class="nav-item ml-3">
                            <a class="font-weight-bold btn btn-success btn-lg rounded text-white" data-toggle="modal" data-target="#exampleModalCenter2" href="#"><i class="fa fa-plus p-1"></i>&ensp;SELL</a>
                          </li>
                          <!-- ======================================Sell=================================================== -->
                          <div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h1 class="modal-title mx-auto text-success h2" id="exampleModalLongTitle">SELL YOUR PRODUCT</h1>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                  <form>
                                    <div class="form-row">
                                      <div class="form-group col-md-6">
                                        <label for="inputState">Commodity</label>
                                        <select id="inputState" class="form-control" required>
                                          <option selected>Choose...</option>
                                          <option>Wheat</option>
                                          <option>Rice</option>
                                          <option>Pulse</option>
                                          <option>Sugercane</option>
                                          <option>Dry Fruit</option>
                                          <option>Vegetable</option>
                                        </select>
                                      </div>
                                      <div class="form-group col-md-6">
                                        <label for="inputPassword4">Variety</label>
                                        <input type="text" class="form-control" id="inputPassword4" placeholder="Variety" required>
                                      </div>
                                    </div>

                                    <div class="form-row">
                                      <div class="form-group col-md-6">
                                        <label for="inputEmail4">Quantity</label>
                                        <input type="number" class="form-control" id="inputEmail4" placeholder="Quantity in Quintals" required>
                                      </div>
                                      <div class="form-group col-md-6">
                                        <label for="inputPassword4">Expected Price</label>
                                        <input type="number" class="form-control" id="inputPassword4" placeholder="Price per Quintal" required>
                                      </div>
                                    </div>
                                    <div class="form-group">
                                      <label for="inputAddress2">Upload Photo</label>
                                      <input type="file" class="form-control" id="inputAddress2" required>
                                    </div>
                                </div>
                                <div class="modal-footer mx-auto">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
                                  <button type="submit" class="btn btn-success">POST NOW</button>
                                </div>
                              </form>
                              </div>
                            </div>
                          </div>
                          <!-- ============================================================================================= -->
                        </ul>
                    </div>
                </div>
            </nav><br><br><br>
            <nav class="navbar navbar-expand-lg navbar-light">
              <div class="container w-75">
